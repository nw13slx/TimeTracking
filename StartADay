logdir=$HOME/worklog/$(date +%Y/%m)
logfile=$HOME/worklog/$(date +%Y/%m/%d)
if [ ! -d $logdir ]; then
    mkdir -p $logdir
fi

datestamp=$(date +%Z' '%Y-%m-%d' '%H:%M)
timestamp=$(date +%H:%M)
if [ ! -f $logfile ]; then
  echo "* $datestamp.; The day starts at $timestamp">>$logfile
else
  echo "* $datestamp.; log-in again at $timestamp">>$logfile
fi
